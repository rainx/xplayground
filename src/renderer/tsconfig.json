{
  "extends": "@electron-toolkit/eslint-config-ts/tsconfig/renderer.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../out/renderer",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
