{
  "name": "xtoolbox",
  "version": "0.1.0",
  "description": "Personal Mac toolbox - clone useful features from paid apps",
  "main": "./out/main/index.js",
  "author": "rainx",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:native": "cd native && pnpm build",
    "postinstall": "electron-builder install-app-deps",
    "typecheck:main": "tsc --noEmit -p src/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p src/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p src/renderer/tsconfig.json",
    "typecheck": "pnpm typecheck:main && pnpm typecheck:preload && pnpm typecheck:renderer",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "package": "electron-builder --mac --config",
    "cli": "electron . --cli"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "lucide-react": "^0.564.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-builder-squirrel-windows": "26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^10.0.0",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "build": {
    "appId": "com.rainx.xtoolbox",
    "productName": "xToolbox",
    "mac": {
      "icon": "resources/icon.png",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "out/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
